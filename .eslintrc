{
  "root": true,
  "env": {
      "node": true,
      "commonjs": true
  },
  "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "project": ["./tsconfig.eslint.json"],
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "ignorePatterns": [".eslintrc.json"],
  "rules": {
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "indent": ["error", 4],
      "no-multi-spaces": ["error"]
  }
}